      "source": [
        "import React, { useState, useEffect, useCallback, useMemo } from 'react';\n",
        "import { initializeApp } from 'firebase/app';\n",
        "import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from 'firebase/auth';\n",
        "import { getFirestore, doc, setDoc, onSnapshot, collection } from 'firebase/firestore';\n",
        "import { Cloud, Search, Bell, Loader, Sun, Wind, Activity } from 'lucide-react';\n",
        "\n",
        "// --- Global Firebase Configuration (Mandatory) ---\n",
        "// These variables are provided by the hosting environment.\n",
        "const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';\n",
        "const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : {};\n",
        "const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;\n",
        "\n",
        "// The base URL for the Gemini API\n",
        "const GEMINI_API_BASE_URL = \"https://generativelanguage.googleapis.com/v1beta/models\";\n",
        "const GEMINI_API_KEY = \"\"; // Canvas provides this automatically\n",
        "// Define the specific model name using the standard alias for better authentication reliability.\n",
        "// FIX: Changed from 'gemini-2.5-flash-preview-05-20' to the alias 'gemini-2.5-flash'\n",
        "const GEMINI_MODEL_NAME = \"gemini-2.5-flash\";\n",
        "\n",
        "// Helper function for exponential backoff (retry logic)\n",
        "const withRetry = async (fn, retries = 3) => {\n",
        "    for (let i = 0; i < retries; i++) {\n",
        "        try {\n",
        "            return await fn();\n",
        "        } catch (error) {\n",
        "            if (i === retries - 1) throw error;\n",
        "            await new Promise(resolve => setTimeout(resolve, Math.pow(2, i) * 1000));\n",
        "        }\n",
        "    }\n",
        "};\n",
        "\n",
        "// Custom Hook to manage Firebase services and authentication\n",
        "const useFirebase = () => {\n",
        "    const [db, setDb] = useState(null);\n",
        "    const [auth, setAuth] = useState(null);\n",
        "    const [userId, setUserId] = useState(null);\n",
        "    const [isAuthReady, setIsAuthReady] = useState(false);\n",
        "\n",
        "    useEffect(() => {\n",
        "        try {\n",
        "            const app = initializeApp(firebaseConfig);\n",
        "            const firestore = getFirestore(app);\n",
        "            const authentication = getAuth(app);\n",
        "\n",
        "            // Set up console logging for debugging\n",
        "            if (firestore.settings) {\n",
        "                // setLogLevel('Debug'); // uncomment for debugging\n",
        "            }\n",
        "\n",
        "            setDb(firestore);\n",
        "            setAuth(authentication);\n",
        "\n",
        "            // Authentication Listener\n",
        "            const unsubscribe = onAuthStateChanged(authentication, (user) => {\n",
        "                if (user) {\n",
        "                    setUserId(user.uid);\n",
        "                } else {\n",
        "                    // Sign in anonymously if no token is available or user is signed out\n",
        "                    if (initialAuthToken) {\n",
        "                        signInWithCustomToken(authentication, initialAuthToken).catch(console.error);\n",
        "                    } else {\n",
        "                        signInAnonymously(authentication).catch(console.error);\n",
        "                    }\n",
        "                }\n",
        "                setIsAuthReady(true);\n",
        "            });\n",
        "\n",
        "            return () => unsubscribe();\n",
        "        } catch (error) {\n",
        "            console.error(\"Firebase Initialization Error:\", error);\n",
        "        }\n",
        "    }, []);\n",
        "\n",
        "    return { db, auth, userId, isAuthReady };\n",
        "};\n",
        "\n",
        "// Custom Hook to fetch user preferences from Firestore\n",
        "const useUserPreferences = (db, userId, isAuthReady) => {\n",
        "    const [location, setLocation] = useState('Los Angeles, CA');\n",
        "    const [notificationsEnabled, setNotificationsEnabled] = useState(true);\n",
        "\n",
        "    useEffect(() => {\n",
        "        if (!db || !userId || !isAuthReady) return;\n",
        "\n",
        "        const prefDocRef = doc(db, `artifacts/${appId}/users/${userId}/aqi_preferences`, 'userSettings');\n",
        "\n",
        "        const unsubscribe = onSnapshot(prefDocRef, (docSnap) => {\n",
        "            if (docSnap.exists()) {\n",
        "                const data = docSnap.data();\n",
        "                setLocation(data.location || 'Los Angeles, CA');\n",
        "                setNotificationsEnabled(data.notificationsEnabled !== undefined ? data.notificationsEnabled : true);\n",
        "            }\n",
        "        }, (error) => {\n",
        "            console.error(\"Error listening to user preferences:\", error);\n",
        "        });\n",
        "\n",
        "        return () => unsubscribe();\n",
        "    }, [db, userId, isAuthReady]);\n",
        "\n",
        "    const savePreferences = useCallback(async (newLocation, newNotificationsEnabled) => {\n",
        "        if (!db || !userId) return;\n",
        "\n",
        "        const prefDocRef = doc(db, `artifacts/${appId}/users/${userId}/aqi_preferences`, 'userSettings');\n",
        "        try {\n",
        "            await setDoc(prefDocRef, {\n",
        "                location: newLocation,\n",
        "                notificationsEnabled: newNotificationsEnabled,\n",
        "                updatedAt: new Date().toISOString()\n",
        "            }, { merge: true });\n",
        "            setLocation(newLocation);\n",
        "            setNotificationsEnabled(newNotificationsEnabled);\n",
        "        } catch (error) {\n",
        "            console.error(\"Error saving user preferences:\", error);\n",
        "        }\n",
        "    }, [db, userId]);\n",
        "\n",
        "    return { location, notificationsEnabled, savePreferences };\n",
        "};\n",
        "\n",
        "\n",
        "// Main App Component\n",
        "const App = () => {\n",
        "    const { db, userId, isAuthReady } = useFirebase();\n",
        "    const { location, notificationsEnabled, savePreferences } = useUserPreferences(db, userId, isAuthReady);\n",
        "\n",
        "    const [aqiData, setAqiData] = useState(null);\n",
        "    const [loading, setLoading] = useState(false);\n",
        "    const [inputLocation, setInputLocation] = useState(location);\n",
        "    const [error, setError] = useState(null);\n",
        "\n",
        "    // Determines color based on AQI description\n",
        "    const getColorClass = (description) => {\n",
        "        if (!description) return 'bg-gray-400';\n",
        "        const lowerDesc = description.toLowerCase();\n",
        "        if (lowerDesc.includes('good')) return 'bg-green-500';\n",
        "        if (lowerDesc.includes('moderate')) return 'bg-yellow-500';\n",
        "        if (lowerDesc.includes('unhealthy for sensitive')) return 'bg-orange-500';\n",
        "        if (lowerDesc.includes('unhealthy')) return 'bg-red-500';\n",
        "        if (lowerDesc.includes('very unhealthy')) return 'bg-purple-600';\n",
        "        if (lowerDesc.includes('hazardous')) return 'bg-maroon-700';\n",
        "        return 'bg-blue-500';\n",
        "    };\n",
        "\n",
        "    const fetchAirQualityForecast = useCallback(async (queryLocation) => {\n",
        "        if (loading) return;\n",
        "        setLoading(true);\n",
        "        setError(null);\n",
        "        setAqiData(null);\n",
        "\n",
        "        const userQuery = `What is the current 24-hour Air Quality Index (AQI) forecast for ${queryLocation}? Simulate the data integration of TEMPO satellite data, ground measurements, and local weather forecasts to provide a synthesized prediction.`;\n",
        "\n",
        "        const payload = {\n",
        "            contents: [{ parts: [{ text: userQuery }] }],\n",
        "            // Use Google Search for grounding to simulate real-time data integration\n",
        "            tools: [{ \"google_search\": {} }],\n",
        "            systemInstruction: {\n",
        "                parts: [{ text: \"You are an AI simulating a real-time air quality prediction engine. Synthesize current real-world air quality information based on the user's location, acting as if you integrated TEMPO satellite data, ground measurements, and weather models. Return only a JSON object containing the current AQI, main pollutant, a health recommendation for the next 24 hours, and a one-word AQI description.\" }]\n",
        "            },\n",
        "            generationConfig: {\n",
        "                responseMimeType: \"application/json\",\n",
        "                responseSchema: {\n",
        "                    type: \"OBJECT\",\n",
        "                    properties: {\n",
        "                        aqi: { type: \"NUMBER\", description: \"Current Air Quality Index (0-300+).\" },\n",
        "                        mainPollutant: { type: \"STRING\", description: \"The primary air pollutant (e.g., Ozone, PM2.5, NO2).\" },\n",
        "                        healthRecommendation: { type: \"STRING\", description: \"A concise, actionable public health recommendation based on the AQI.\" },\n",
        "                        aqiDescription: { type: \"STRING\", description: \"A one-word description of the AQI level (e.g., Good, Moderate, Unhealthy).\" }\n",
        "                    },\n",
        "                    required: [\"aqi\", \"mainPollutant\", \"healthRecommendation\", \"aqiDescription\"]\n",
        "                }\n",
        "            }\n",
        "        };\n",
        "\n",
        "        try {\n",
        "            const result = await withRetry(async () => {\n",
        "                // The API URL uses the general model alias defined above.\n",
        "                const apiUrl = `${GEMINI_API_BASE_URL}/${GEMINI_MODEL_NAME}:generateContent`;\n",
        "\n",
        "                const response = await fetch(apiUrl, {\n",
        "                    method: 'POST',\n",
        "                    headers: { 'Content-Type': 'application/json' },\n",
        "                    body: JSON.stringify(payload)\n",
        "                });\n",
        "\n",
        "                if (!response.ok) {\n",
        "                    // Log the error body for debugging purposes, but throw the HTTP error\n",
        "                    const errorText = await response.text();\n",
        "                    console.error(\"API Response Error Body:\", errorText);\n",
        "                    throw new Error(`HTTP error! status: ${response.status}`);\n",
        "                }\n",
        "\n",
        "                const jsonResponse = await response.json();\n",
        "                const jsonText = jsonResponse.candidates?.[0]?.content?.parts?.[0]?.text;\n",
        "\n",
        "                if (!jsonText) {\n",
        "                    throw new Error(\"No structured response received from API.\");\n",
        "                }\n",
        "\n",
        "                const parsedJson = JSON.parse(jsonText);\n",
        "                return parsedJson;\n",
        "            });\n",
        "\n",
        "            // Store the successful data\n",
        "            setAqiData(result);\n",
        "\n",
        "            // Check for notification condition\n",
        "            if (notificationsEnabled && result.aqi >= 101) { // 101+ is Unhealthy for Sensitive Groups\n",
        "                console.log(`Poor air quality detected (${result.aqi}). Sending simulated notification.`);\n",
        "                // In a real app, this would trigger a push notification or email.\n",
        "            }\n",
        "        } catch (err) {\n",
        "            console.error(\"AQI Prediction Error:\", err);\n",
        "            setError(\"Failed to fetch forecast. Check console for details.\");\n",
        "        } finally {\n",
        "            setLoading(false);\n",
        "        }\n",
        "    }, [loading, notificationsEnabled]);\n",
        "\n",
        "    // Initial fetch on component mount and whenever location preference changes\n",
        "    useEffect(() => {\n",
        "        if (location) {\n",
        "            fetchAirQualityForecast(location);\n",
        "            setInputLocation(location);\n",
        "        }\n",
        "    }, [location, fetchAirQualityForecast]);\n",
        "\n",
        "    // Handle form submission to change location and refresh forecast\n",
        "    const handleSearch = (e) => {\n",
        "        e.preventDefault();\n",
        "        savePreferences(inputLocation, notificationsEnabled);\n",
        "        fetchAirQualityForecast(inputLocation);\n",
        "    };\n",
        "\n",
        "    const aqiCategory = aqiData ? aqiData.aqiDescription : 'Loading';\n",
        "    const bgColor = getColorClass(aqiCategory);\n",
        "\n",
        "    // Render the main application\n",
        "    return (\n",
        "        <div className=\"min-h-screen bg-gray-50 p-4 sm:p-8 font-['Inter'] flex items-center justify-center\">\n",
        "            <div className=\"w-full max-w-2xl bg-white shadow-2xl rounded-xl overflow-hidden\">\n",
        "                {/* Header */}\n",
        "                <header className=\"p-6 bg-gradient-to-r from-blue-600 to-indigo-600 text-white shadow-lg\">\n",
        "                    <h1 className=\"text-3xl font-extrabold flex items-center\">\n",
        "                        <Cloud className=\"w-8 h-8 mr-3\" />\n",
        "                        Cleaner, Safer Skies\n",
        "                    </h1>\n",
        "                    <p className=\"text-sm mt-1 opacity-90\">TEMPO EarthData to Action Predictor</p>\n",
        "                </header>\n",
        "\n",
        "                {/* User ID and Status */}\n",
        "                <div className=\"p-4 border-b border-gray-100 text-xs text-gray-500 bg-gray-50 flex justify-between items-center\">\n",
        "                    <span className=\"font-mono truncate\">\n",
        "                        User ID: {userId || 'Authenticating...'}\n",
        "                    </span>\n",
        "                    <div className={`px-2 py-0.5 rounded-full text-white text-xs font-semibold ${notificationsEnabled ? 'bg-green-500' : 'bg-red-500'}`}>\n",
        "                        <Bell className=\"w-3 h-3 inline-block mr-1\" />\n",
        "                        {notificationsEnabled ? 'Alerts ON' : 'Alerts OFF'}\n",
        "                    </div>\n",
        "                </div>\n",
        "\n",
        "                {/* Location Search Form */}\n",
        "                <form onSubmit={handleSearch} className=\"p-6 border-b\">\n",
        "                    <div className=\"flex space-x-2\">\n",
        "                        <div className=\"relative flex-grow\">\n",
        "                            <input\n",
        "                                type=\"text\"\n",
        "                                value={inputLocation}\n",
        "                                onChange={(e) => setInputLocation(e.target.value)}\n",
        "                                placeholder=\"Enter city or zip code (e.g., Denver, CO)\"\n",
        "                                className=\"w-full p-3 pl-10 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-150\"\n",
        "                                required\n",
        "                                disabled={loading || !isAuthReady}\n",
        "                            />\n",
        "                            <Search className=\"absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400\" />\n",
        "                        </div>\n",
        "                        <button\n",
        "                            type=\"submit\"\n",
        "                            className=\"px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg shadow-md transition duration-150 flex items-center disabled:opacity-50\"\n",
        "                            disabled={loading || !isAuthReady}\n",
        "                        >\n",
        "                            {loading ? <Loader className=\"w-5 h-5 animate-spin\" /> : 'Get Forecast'}\n",
        "                        </button>\n",
        "                    </div>\n",
        "                    <div className=\"flex items-center mt-3\">\n",
        "                        <input\n",
        "                            id=\"notifications\"\n",
        "                            type=\"checkbox\"\n",
        "                            checked={notificationsEnabled}\n",
        "                            onChange={() => savePreferences(location, !notificationsEnabled)}\n",
        "                            className=\"h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500\"\n",
        "                            disabled={!isAuthReady}\n",
        "                        />\n",
        "                        <label htmlFor=\"notifications\" className=\"ml-2 block text-sm text-gray-700\">\n",
        "                            Enable Poor Air Quality Notifications (Saves to Cloud)\n",
        "                        </label>\n",
        "                    </div>\n",
        "                </form>\n",
        "\n",
        "                {/* AQI Results Display */}\n",
        "                <div className=\"p-6\">\n",
        "                    <h2 className=\"text-2xl font-bold text-gray-800 mb-4\">\n",
        "                        24-Hour Air Quality Forecast for {location}\n",
        "                    </h2>\n",
        "\n",
        "                    {error && (\n",
        "                        <div className=\"p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg mb-4\">\n",
        "                            <p className=\"font-semibold\">Error:</p>\n",
        "                            <p className=\"text-sm\">{error}</p>\n",
        "                        </div>\n",
        "                    )}\n",
        "\n",
        "                    {loading || !aqiData ? (\n",
        "                        <div className=\"flex flex-col items-center justify-center h-48 bg-gray-50 rounded-lg p-6\">\n",
        "                            <Loader className=\"w-10 h-10 text-blue-500 animate-spin mb-3\" />\n",
        "                            <p className=\"text-gray-600 font-medium\">\n",
        "                                Analyzing TEMPO, Ground & Weather Data...\n",
        "                            </p>\n",
        "                        </div>\n",
        "                    ) : (\n",
        "                        <div className=\"space-y-6\">\n",
        "                            {/* AQI Card */}\n",
        "                            <div className={`p-5 rounded-xl text-white shadow-xl ${bgColor}`}>\n",
        "                                <div className=\"flex justify-between items-center\">\n",
        "                                    <p className=\"text-xl font-medium\">AQI Level</p>\n",
        "                                    <p className=\"text-4xl font-extrabold\">{aqiCategory}</p>\n",
        "                                </div>\n",
        "                                <div className=\"flex justify-between items-end mt-2\">\n",
        "                                    <p className=\"text-6xl font-black leading-none\">{aqiData.aqi}</p>\n",
        "                                    <p className=\"text-lg font-semibold flex items-center\">\n",
        "                                        Primary Pollutant: <Wind className=\"w-5 h-5 ml-2\" /> {aqiData.mainPollutant}\n",
        "                                    </p>\n",
        "                                </div>\n",
        "                            </div>\n",
        "\n",
        "                            {/* Recommendation Card */}\n",
        "                            <div className=\"bg-white border border-gray-200 p-5 rounded-xl shadow-lg\">\n",
        "                                <h3 className=\"text-lg font-bold text-gray-800 flex items-center mb-2\">\n",
        "                                    <Activity className=\"w-5 h-5 mr-2 text-indigo-500\" />\n",
        "                                    Public Health Action\n",
        "                                </h3>\n",
        "                                <p className=\"text-gray-600 leading-relaxed\">{aqiData.healthRecommendation}</p>\n",
        "                                <p className=\"mt-3 text-xs text-gray-400\">\n",
        "                                    *Prediction synthesized using Google Search grounded data, simulating cloud-scale Earth Observation processing.\n",
        "                                </p>\n",
        "                            </div>\n",
        "                        </div>\n",
        "                    )}\n",
        "                </div>\n",
        "            </div>\n",
        "        </div>\n",
        "    );\n",
        "};\n",
        "\n",
        "export default App;"
      ]
    }
